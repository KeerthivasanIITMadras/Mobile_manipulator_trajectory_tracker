<?xml version = "1.0" ?>
<launch>

  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="z" default="0.0"/>
  <arg name="yaw" default="0.0"/>
  <arg name="rvizconfig" default="$(find youbot_description)/rviz/config.rviz" />
  
  <node pkg="tf" type="static_transform_publisher" name="footprint_to_link" args="0 0 0 0 0 0 base_footprint base_link 100" />
  
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
  
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  
  <param command="$(find xacro)/xacro $(find youbot_description)/robots/youbot_with_cam3d.urdf" name="robot_description"/>
  
  <node args="-param robot_description -urdf -model youbot -x $(arg x) -y $(arg y) -z $(arg z) -Y $(arg yaw)" name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
  <!--arg name="world_name" value="$(find galileo_description)/worlds/workspace.world"/--> 
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>
  
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />
  
</launch>
